@model OnlineTestingSystem.Models.Users


<h2>User Login</h2>
<h4 style="font-style:oblique; font-weight:lighter;">Complete the registration form below:</h4>
<br />
<div class="container">
    @using (Html.BeginForm("LoginUsers", "Users", FormMethod.Post))
    {
        <div class="form-group">
            @Html.LabelFor(a => a.UserEmail, "Email")
            @Html.TextBoxFor(u => u.UserEmail, new { @class = "form-control", placeholder = "Enter your Email" })
            @Html.ValidationMessageFor(u => u.UserEmail, "", new { @style = "color:red" })            
        </div>   
        <div class="form-group">
            @Html.LabelFor(l => l.UserPassword, "Password")
            @Html.PasswordFor(u => u.UserPassword, new { @class = "form-control", placeholder = "Enter your Password" })
            @Html.ValidationMessageFor(u => u.UserPassword, "", new { @style = "color:red" })
        </div>
        <input class="btn btn-primary" type="submit" />
    }
    @ViewBag.message

</div>

