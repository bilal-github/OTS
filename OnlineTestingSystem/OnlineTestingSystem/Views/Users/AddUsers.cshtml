@model OnlineTestingSystem.Models.Users
@{
    ViewBag.Title = "SignUP";
}

<h2>Registration Form</h2>
<h4 style="font-style:oblique; font-weight:lighter;">Complete the registration form below:</h4>
<br />
<div class="container">
    @using (Html.BeginForm("AddUsers", "Users", FormMethod.Post))
    {
    <div class="form-group">
        @Html.LabelFor(t => t.UserFirstName, "First Name")
        @Html.TextBoxFor(u => u.UserFirstName, new { @class = "form-control", placeholder = "Enter your First Name" })
        @Html.ValidationMessageFor(u => u.UserFirstName,"", new {@style ="color:red" })
    </div>
    <div class="form-group">
        @Html.LabelFor(l => l.UserLastName, "Last Name")
        @Html.TextBoxFor(u => u.UserLastName, new { @class = "form-control", placeholder = "Enter Your Last Name" })
        @Html.ValidationMessageFor(u => u.UserLastName,"", new {@style ="color:red" })
    </div>
    <div class="form-group">
        @Html.LabelFor(l => l.UserEmail, "Email")
        @Html.TextBoxFor(u => u.UserEmail, new { @class = "form-control", placeholder = "Enter your Email" })
        @Html.ValidationMessageFor(u => u.UserEmail,"", new {@style ="color:red" })
    </div>
    <div class="form-group">
        @Html.LabelFor(l => l.UserPassword, "Password")
        @Html.PasswordFor(u => u.UserPassword, new { @class = "form-control", placeholder = "Enter your Password" })
        @Html.ValidationMessageFor(u => u.UserPassword,"", new {@style ="color:red" })
    </div>
        <input class="btn btn-primary" type="submit" />
    }
    
</div>

