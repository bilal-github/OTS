@model OnlineTestingSystem.Models.Discipline
@{
    ViewBag.Title = "AddDiscipline";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Discipline Registration Form</h2>
<h4 style="font-style:oblique; font-weight:lighter;">Complete the registration form below:</h4>
<br />
<div class="container">
    @using (Html.BeginForm("AddDiscipline", "Discipline", FormMethod.Post))
    {
        <div class="form-group">
            @Html.LabelFor(a => a.DisciplineName, "Discipline Name")
            @Html.TextBoxFor(u => u.DisciplineName, new { @class = "form-control", placeholder = "Enter Discipline Name" })
            @Html.ValidationMessageFor(u => u.DisciplineName, "", new { @style = "color:red" })
        </div>
        <input class="btn btn-primary" type="submit" />

    }
    @ViewBag.message


</div>

