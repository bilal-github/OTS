<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <br />
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary  fixed-top">
        <div class="container">
            @Html.ActionLink("Online Testing System", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarColor02">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">@Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link active" })</li>
                    <li class="nav-item">@Html.ActionLink("About", "About", "Home", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Contact", "Contact", "Home", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("SignUP", "AddUsers", "Users", null, new { @class = "nav-link" })</li>
                </ul>
                <form class="form-inline my-2 my-lg-0">
                    <input class="form-control mr-sm-2" type="text" placeholder="Search">
                    <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
                </form>
            </div>
        </div>
    </nav>
    <div class="container">
        <div class="row">
            @*Left Panel*@
            <div class="col-4">
                <div class="row">
                    @Html.ActionLink("Add Discipline", "AddDiscipline", "Discipline", null, new { @class = "btn btn-primary" })
                </div>
                <div class="row">
                    @Html.ActionLink("Edit Discipline", "EditDiscipline", "Discipline", null, new { @class = "btn btn-primary m-1" })
                </div>
            </div>
            @*Middle Panel*@
            <div class="col-8">
                <div class="container body-content">
                    @RenderBody()

                </div>
            </div>

        </div>
    </div>

    <div class="container-fluid justify-content-center fixed-bottom">
        <div class="row justify-content-center">
            <footer>
                <p>&copy; @DateTime.Now.Year - Online Testing System</p>
            </footer>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

