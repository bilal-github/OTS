@model OnlineTestingSystem.Models.Admin


<h2>Admin Login</h2>
<h4 style="font-style:oblique; font-weight:lighter;">Complete the registration form below:</h4>
<br />
<div class="container">
    @using (Html.BeginForm("AdminLogin", "Admin", FormMethod.Post))
    {
        <div class="form-group">
            @Html.LabelFor(a => a.AdminName, "Name")
            @Html.TextBoxFor(u => u.AdminName, new { @class = "form-control", placeholder = "Enter your First Name" })
            @Html.ValidationMessageFor(u => u.AdminName, "", new { @style = "color:red" })
        </div>

        <div class="form-group">
            @Html.LabelFor(l => l.AdminPassword, "Password")
            @Html.PasswordFor(u => u.AdminPassword, new { @class = "form-control", placeholder = "Enter your Password" })
            @Html.ValidationMessageFor(u => u.AdminPassword, "", new { @style = "color:red" })
        </div>
        <input class="btn btn-primary" type="submit" />
    }

    @ViewBag.message

</div>
